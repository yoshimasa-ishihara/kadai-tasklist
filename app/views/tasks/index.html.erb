<h1><%=current_user.name%>のタスク一覧</h1>

<table class="table table-hover table-bordered">
   
  <thead> 
    <tr> 
      <th>id</th>
      <th>タスク</th>
      <th>ステータス</th>
    </tr>  
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
     <tr>
     <td><%= link_to task.id, task %></td>
     <td><%= task.content %></td>
     <td><%= task.status %></td>
     </tr>  
    <% end %>
  </tbody>  
</table>  

<%= paginate @tasks %>
<botton class="btn btn-default">
<%= link_to 'タスク作成', new_task_path %>
</botton>